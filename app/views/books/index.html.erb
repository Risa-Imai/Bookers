<h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>  <!-- 格納されたデータすべてを呼び出す -->
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></td>
          <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
        <tr>
    <% end %>
    </tbody>
  </table>


<h2>New book</h2>
<%= form_with model: @book do |f| %>  <!-- 新規投稿データを入れる為の箱を用意して格納する -->
<form class="new_book" id="new_book">
    <div class="field">
      <label>Title</label>
        <%= f.text_field :title %>
    </div>
    <div class="field">
      <label>Body</label>
        <%= f.text_area :body %>
    </div>
    <div class="actions">
        <%= f.submit 'Create Book' %>
    </div>
</form>
<% end %>